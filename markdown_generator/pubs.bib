keywords = "Ordinal regression, Discriminant analysis, Semi-supervised learning, Classification, Kernel learning",
month = "December",
note = "JCR(2016): 5.287 Position: 10/133 (Q1) Category: COMPUTER SCIENCE, ARTIFICIAL INTELLIGENCE",
pages = "57--66",
title = "{S}emi-{S}upervised {L}earning {F}or {O}rdinal {K}ernel {D}iscriminant {A}nalysis",
