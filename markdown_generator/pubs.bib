journal = "Neural Processing Letters",
month = "December",
note = "JCR(2017): 1.787 Position: 63/132 (Q2) Category: COMPUTER SCIENCE, ARTIFICIAL INTELLIGENCE",
number = "3",
pages = "767-790",
title = "{I}dentifying market behaviours using {E}uropean {S}tock {I}ndex time series by a hybrid segmentation algorithm",
url = "doi.org/10.1007/s11063-017-9592-8",
volume = "46",
year = "2017",
}


@article{Duran2017ESWH,
