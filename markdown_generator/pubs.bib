note = "JCR(2017): 2.214 Position: 2/14 (Q1) Category: ENGINEERING, MARINE",
pages = "268-279",
title = "{D}etection and prediction of segments containing extreme significant wave heights",
url = "doi.org/10.1016/j.oceaneng.2017.07.009",
volume = "142",
year = "2017",
