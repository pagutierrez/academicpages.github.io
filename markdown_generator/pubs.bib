number = "3",
pages = "56--65",
title = "{E}nsembles of evolutionary product unit or {RBF} neural networks for the identification of sound for pass-by noise test in vehicles",
url = "http://dx.doi.org/10.1016/j.neucom.2012.03.022",
volume = "109",
year = "2013",
}


